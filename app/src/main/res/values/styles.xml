<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageButtonToolbar">
        <item name="android:background">@null</item>
        <item name="android:tint">@color/white</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/color_app_blue</item>
        <item name="colorControlActivated">@color/color_app_blue</item>
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
